@model Moto

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Adicionar Moto</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f9f9f9;
            margin: 30px;
        }

        h2 {
            color: #333;
            text-align: center;
            margin-bottom: 25px;
        }

        .form-container {
            max-width: 500px;
            margin: 0 auto; /* Centraliza horizontalmente */
            background-color: #fff;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
            text-align: left;
        }

        input {
            width: 100%;
            padding: 10px;
            margin-bottom: 15px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        .form-group {
            text-align: center; /* Centraliza o botão */
            margin-top: 20px;
        }

        button {
            background-color: #00b131;
            color: black;
            font-weight: bold;
            padding: 10px 20px;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            button:hover {
                background-color: #00ff00;
            }

        .text-danger {
            color: red;
            font-size: 0.9em;
        }
    </style>
</head>
<body>

    <h2>Adicionar Moto</h2>

    <div class="form-container">
        <form asp-action="Create" method="post">
            <div>
                <label asp-for="Placa">Placa:</label>
                <input asp-for="Placa" />
                <span asp-validation-for="Placa" class="text-danger"></span>
            </div>

            <div>
                <label asp-for="Marca">Marca:</label>
                <input asp-for="Marca" />
                <span asp-validation-for="Marca" class="text-danger"></span>
            </div>

            <div>
                <label asp-for="Modelo">Modelo:</label>
                <input asp-for="Modelo" />
                <span asp-validation-for="Modelo" class="text-danger"></span>
            </div>

            <div>
                <label asp-for="Chassi">Chassi:</label>
                <input asp-for="Chassi" />
                <span asp-validation-for="Chassi" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit">Adicionar Moto</button>
            </div>
        </form>
    </div>

</body>
</html>

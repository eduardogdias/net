@model Patio

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Editar Patio</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f9f9f9;
            margin: 30px;
        }

        h2 {
            color: #333;
            text-align: center;
            margin-bottom: 25px;
        }

        .form-container {
            max-width: 500px;
            margin: 0 auto;
            background-color: #fff;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
            text-align: left;
        }

        input {
            width: 100%;
            padding: 10px;
            margin-bottom: 15px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        .form-group {
            text-align: center;
            margin-top: 20px;
            display: flex;
            gap: 10px;
        }

        button {
            background-color: #00b131;
            color: black;
            font-weight: bold;
            padding: 10px 20px;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        button:hover {
            background-color: #00ff00;
        }

        .text-danger {
            color: red;
            font-size: 0.9em;
        }
    </style>
</head>
<body>

    <h2>Editar Pátio</h2>

    <div class="form-container">
        <form asp-action="Update" method="post">
            <input type="hidden" asp-for="Id"/>

            <div>
                <label asp-for="Nome">Nome:</label>
                <input asp-for="Nome" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div>
                <label asp-for="Descricao">Descrição:</label>
                <input asp-for="Descricao" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>

            <div>
                <label asp-for="ComprimentoPatio">Comprimento do pátio:</label>
                <input asp-for="ComprimentoPatio" />
                <span asp-validation-for="ComprimentoPatio" class="text-danger"></span>
            </div>

            <div>
                <label asp-for="LarguraPatio">Largura do pátio:</label>
                <input asp-for="LarguraPatio" />
                <span asp-validation-for="LarguraPatio" class="text-danger"></span>
            </div>

            <div>
                <label asp-for="ComprimentoVaga">Comprimento da vaga:</label>
                <input asp-for="ComprimentoVaga" />
                <span asp-validation-for="ComprimentoVaga" class="text-danger"></span>
            </div>

            <div>
                <label asp-for="LarguraVaga">Largura da vaga:</label>
                <input asp-for="LarguraVaga" />
                <span asp-validation-for="LarguraVaga" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit">Atualizar Pátio</button>
            </div>
        </form>
    </div>

</body>
</html>
